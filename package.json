{
  "name": "event-management-system",
  "version": "1.0.0",
  "description": "A comprehensive, modern event management system built to help organize, manage, and track events efficiently.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "build": "npm run build:client && npm run build:server",
    "build:client": "echo 'Client build script - to be implemented'",
    "build:server": "echo 'Server build script - to be implemented'",
    "db:setup": "echo 'Database setup script - to be implemented'",
    "db:migrate": "echo 'Database migration script - to be implemented'",
    "db:seed": "echo 'Database seeding script - to be implemented'"
  },
  "keywords": [
    "event-management",
    "events",
    "nodejs",
    "express",
    "mongodb",
    "react",
    "hacktoberfest",
    "open-source"
  ],
  "author": "GreenHacker420 <your-email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GreenHacker420/Event_Managment.git"
  },
  "bugs": {
    "url": "https://github.com/GreenHacker420/Event_Managment/issues"
  },
  "homepage": "https://github.com/GreenHacker420/Event_Managment#readme",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^5.1.0",
    "mongoose": "^8.19.1",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^17.2.3",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "nodemailer": "^7.0.7",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "eslint": "^9.37.0",
    "prettier": "^3.3.3",
    "@types/node": "^24.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 15,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}
